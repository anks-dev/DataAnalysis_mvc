<form class="form-inline vertical-margin">

    <div>
        <div class="form-group">
            <label class="lbl-instance-name" for="instanceName">Enter Instance name</label>
            <input type="text" class="form-control" id="instancename"
                   placeholder="Enter instance Name">
        </div>
    </div>
    <div id="instanceDetails" class="readonly vertical-margin ">


        <div class="instance-details-panel panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Instance Details</h3>
            </div>
            <div class="panel-body">
                <div class="">
                    <div class="form-group">
                        <label for="company">Company</label>
                        <input id="company" data-bind='value: company' class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="status">Status</label>
                        <input id="status" data-bind='value: status' class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="edition">Edition</label>
                        <input id="edition" data-bind='value: edition' class="form-control" />
                    </div>
                </div>

                <div>
                    <div class="form-group vertical-margin">
                        <div class="form-group">
                            <label for="supportedby">Supported By</label>
                            <input type="text" data-bind='value: supportedBy' class="form-control" id="supportedby">
                        </div>
                        <div class="form-group">
                            <label for="version">Version</label>
                            <input type="text" data-bind='value: version' class="form-control" id="version">
                        </div>
                        <div class="form-group">
                            <label for="virtual">Virtual</label>
                            <input type="text" data-bind='value: virtual' id="virtual" class="form-control">
                        </div>
                    </div>
                </div>

                <div>
                    <div class="form-group vertical-margin">
                        <div class="form-group">
                            <label for="machinename">Machine Name</label>
                            <input type="text" data-bind='value: machineName' class="form-control" id="machinename">
                        </div>
                        <div class="form-group">
                            <label for="servicePack">Service Pack</label>
                            <input type="text" data-bind='value: servicePack' class="form-control" id="servicePack">
                        </div>
                        <div class="form-group">
                            <label for="projectUsing">Project using</label>
                            <input type="text" data-bind='value: projectUsing' class="form-control" id="projectUsing">
                        </div>
                    </div>
                </div>

                <div>
                    <div class="form-group vertical-margin">
                        <div class="form-group">
                            <label for="ipAddress">IP Address</label>
                            <input type="text" data-bind='value: ipAddress' class="form-control" id="ipAddress">
                        </div>
                        <div class="form-group">
                            <label for="os">OS</label>
                            <input type="text" data-bind='value: os' class="form-control" id="os">
                        </div>
                        <div class="form-group">
                            <label for="monitor">Monitor</label>
                            <input type="text" data-bind='value: monitor' class="form-control" id="monitor">
                        </div>
                    </div>
                </div>

                <div>
                    <div class="form-group vertical-margin">
                        <div class="">
                            <div class="form-group">
                                <label for="contact">Contact</label>
                                <textarea class="form-control" id="contact"
                                          rows="5" cols="105"
                                          data-bind='value: contact'></textarea>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>


    </div>

</form>